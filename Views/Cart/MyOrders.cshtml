@model IEnumerable<Notifico.Models.Order>

@{
    ViewData["Title"] = "Siparişlerim";
}

<h2 class="mb-4">Siparişlerim</h2>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Henüz hiç siparişiniz yok.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Sipariş No</th>
                <th>Tarih</th>
                <th>Tutar</th>
                <th>Durum</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@order.TotalAmount.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                    <td>@order.Status</td>
                    <td>
                        <a asp-action="OrderDetail" asp-route-id="@order.Id" class="btn btn-primary btn-sm">
                            Detay
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
