@model Notifico.Models.Order

@{
    ViewData["Title"] = "Sipariş Detayı";
    var tr = new System.Globalization.CultureInfo("tr-TR");
}

@if (Model == null)
{
    <div class="alert alert-warning mt-4">Sipariş detayları bulunamadı.</div>
}
else
{
    <h3 class="mb-3">Sipariş No: @Model.Id</h3>
    <p><strong>Tarih:</strong> @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")</p>
    <p><strong>Durum:</strong> @Model.Status.ToString()</p>
    <p><strong>Toplam Tutar:</strong> @Model.TotalAmount.ToString("C", tr)</p>

    <div class="mb-3">
        <strong>Teslimat Adresi:</strong>
        <div class="border rounded bg-light p-2 mt-1" style="max-width:600px;">
            @(!string.IsNullOrWhiteSpace(Model.AddressSnapshot)
                ? Model.AddressSnapshot
                : "Adres bilgisi bulunamadı.")
        </div>
    </div>

    <hr />
    <table class="table table-bordered table-striped align-middle">
        <thead>
            <tr>
                <th>Görsel</th>
                <th>Ürün</th>
                <th>Adet</th>
                <th>Birim Fiyat</th>
                <th>Toplam</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>
                        <img src="@(!string.IsNullOrEmpty(item.Product?.ImageUrl) ? item.Product.ImageUrl : "/images/noimage.png")"
                             alt="Görsel"
                             style="width:64px; height:64px; object-fit:cover; border-radius:8px;" />
                    </td>
                    <td><strong>@item.Product?.Name</strong></td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C", tr)</td>
                    <td>@(item.UnitPrice * item.Quantity).ToString("C", tr)</td>
                </tr>
            }
        </tbody>
    </table>
    <a href="@Url.Action("MyOrders", "Cart")" class="btn btn-outline-secondary mt-2">Tüm Siparişlerim</a>
}
