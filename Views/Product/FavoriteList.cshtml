@model IEnumerable<Notifico.Models.FavoriteProduct>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Notifico.Models.AppUser> SignInManager

@{
    ViewData["Title"] = "Favori Ürünlerim";
    Layout = "_Layout";
}

<h1 class="fw-bold mb-4" style="font-size:2.1rem; color:#1a255e;">Favori Ürünlerim</h1>

@if (!Model.Any())
{
    <div class="alert alert-info mt-4">
        Henüz hiç favori ürününüz yok.
        <a href="@Url.Action("Index", "Product")">Ürünlere göz at!</a>
    </div>
}
else
{
    <div class="d-flex flex-wrap gap-4 justify-content-start">
        @foreach (var fav in Model)
        {
            var p = fav.Product;
            <div class="card shadow-sm border-0" style="flex: 1 1 18rem; max-width: 18rem; display:flex; flex-direction:column;">
                <a asp-action="Details" asp-route-id="@p.Id">
                    <img src="@p.ImageUrl" class="card-img-top" alt="@p.Name"
                         style="width:100%; height:180px; object-fit:contain; background:#f8f9fa; border-radius:16px 16px 0 0;">
                </a>
                <div class="card-body d-flex flex-column justify-content-between">
                    <div>
                        <h5 class="card-title fw-bold">@p.Name</h5>
                        <p class="card-text text-truncate" style="max-height:3rem;">@p.Description</p>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mt-2">
                        <span class="fw-bold text-primary" style="font-size:1.2rem;">@p.Price.ToString("C")</span>
                        <form asp-action="ToggleFavorite" asp-controller="Product" method="post" style="display:inline;">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@p.Id" />
                            <button type="submit" class="btn btn-link text-danger p-0 m-0" title="Favorilerden Çıkar">
                                <i class="bi bi-heart-fill" style="font-size:1.3rem;"></i>
                            </button>
                        </form>
                    </div>
                    <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-outline-primary w-100 mt-2">Detay</a>
                </div>
            </div>
        }
    </div>
}
