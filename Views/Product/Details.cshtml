@model Notifico.Models.Product

@{
    ViewData["Title"] = "Ürün Detayı";
}

<style>
    .product-detail-card {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 2px 22px 0 rgba(45,60,120,0.08);
        padding: 2.2rem 2.3rem 1.7rem 2.3rem;
        margin: 36px auto 0 auto;
        max-width: 950px;
    }
    .product-img-box {
        background: #f5f7fb;
        border-radius: 13px;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 340px;
        margin-bottom: 18px;
        box-shadow: 0 2px 12px 0 rgba(130,160,230,0.04);
    }
    .product-img-box img {
        max-height: 300px;
        max-width: 100%;
        object-fit: contain;
    }
    .product-info-box h2 {
        font-weight: 700;
        font-size: 2rem;
        margin-bottom: .65rem;
        color: #1a265c;
    }
    .product-info-box .lead {
        font-size: 1.1rem;
        color: #456;
        margin-bottom: 1.35rem;
    }
    .product-info-box .product-price {
        color: #2563eb;
        font-size: 2rem;
        font-weight: 800;
        margin-bottom: 1.15rem;
        letter-spacing: -.02em;
    }
    .product-info-box .stock-badge {
        font-size: 1rem;
        padding: 6px 13px;
        border-radius: 12px;
        font-weight: 500;
        margin-bottom: .7rem;
        display: inline-block;
    }
    .product-info-box .stock-badge.instock {
        background: #e3f7e8;
        color: #17833e;
        border: 1px solid #abe1bd;
    }
    .product-info-box .stock-badge.nostock {
        background: #ffeaea;
        color: #c32929;
        border: 1px solid #e3bbbb;
    }
    .product-info-box .product-category {
        color: #3b3b4f;
        font-size: 1.08rem;
        margin-bottom: 1.7rem;
    }
    .product-info-box .btn-success {
        min-width: 150px;
        font-weight: 600;
        font-size: 1.09rem;
        border-radius: 14px;
        padding: .75rem 0;
    }
    .product-info-box .btn-outline-secondary {
        border-radius: 10px;
        font-size: .99rem;
        margin-top: 1.2rem;
        min-width: 160px;
    }
    media (max-width: 900px) {
        .product-detail-card { padding: 1.1rem 0.7rem 1.1rem 0.7rem;}
        .product-info-box h2 { font-size: 1.28rem;}
        .product-info-box .product-price { font-size: 1.3rem;}
    }
    media (max-width: 600px) {
        .product-img-box { min-height: 180px; }
        .product-info-box h2 { font-size: 1.05rem;}
        .product-info-box .product-price { font-size: 1.09rem;}
    }
</style>

<div class="product-detail-card">
    <div class="row align-items-center">
        <div class="col-md-6 text-center">
            <div class="product-img-box mb-3">
                <img src="@Model.ImageUrl" alt="@Model.Name" />
            </div>
        </div>
        <div class="col-md-6 product-info-box">
            <h2>@Model.Name</h2>
            <div class="lead">@Model.Description</div>
            <div class="product-price">@Model.Price.ToString("C")</div>
            @if (Model.Stock > 0)
            {
                <span class="stock-badge instock">Stok: @Model.Stock</span>
            }
            else
            {
                <span class="stock-badge nostock">Stokta Yok</span>
            }
            <div class="product-category"><b>Kategori:</b> @Model.Category</div>
            <form asp-action="AddToCart" asp-controller="Cart" method="post" class="mt-2">
                <input type="hidden" name="productId" value="@Model.Id" />
                <button type="submit" class="btn btn-success btn-lg" @(Model.Stock == 0 ? "disabled" : "")>
                    <i class="bi bi-cart-plus"></i> Sepete Ekle
                </button>
            </form>
            <a asp-action="Index" class="btn btn-outline-secondary mt-3">
                <i class="bi bi-chevron-left"></i> Tüm Ürünlere Dön
            </a>
        </div>
    </div>
</div>
