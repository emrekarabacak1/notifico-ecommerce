@model IEnumerable<Notifico.Models.Product>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<Notifico.Models.AppUser> SignInManager
@inject UserManager<Notifico.Models.AppUser> UserManager

<style>
    .search-bar-card {
        background: #fff;
        border-radius: 1.1rem;
        box-shadow: 0 2px 20px 0 rgba(70,110,200,0.09);
        padding: 1.2rem 1.3rem 1.1rem 1.3rem;
        margin-bottom: 2.2rem;
        border: 1px solid #e4eafd;
    }

    .table-products {
        background: #fff;
        border-radius: 1rem;
        box-shadow: 0 2px 22px 0 rgba(70,110,200,0.08);
        overflow: hidden;
        border-collapse: separate;
        border-spacing: 0;
        margin-bottom: 1.8rem;
        font-size: 1.03rem;
    }

        .table-products thead th {
            background: #f7fafd;
            font-weight: 800;
            color: #1a255e;
            font-size: 1.01rem;
            border-bottom: 2.3px solid #e4eafd !important;
            padding-top: 1.05rem;
            padding-bottom: 1.05rem;
        }

        .table-products tbody tr {
            border-bottom: 1.2px solid #f1f3fa;
            transition: background 0.13s;
        }

            .table-products tbody tr:hover {
                background: #f3f7fe;
                box-shadow: 0 2px 7px 0 rgba(80,150,240,0.10);
            }

        .table-products td, .table-products th {
            vertical-align: middle !important;
            padding: 0.86rem 1.02rem !important;
            border: none;
        }

    .product-img-thumb {
        width: 50px;
        height: 50px;
        object-fit: cover;
        border-radius: 0.9rem;
        border: 1.3px solid #e4eafd;
        background: #fafaff;
    }

    .btn-add-to-cart, .btn-info {
        font-weight: 700;
        border-radius: 1.4rem !important;
        padding: 0.52rem 1.5rem !important;
        font-size: 1.02rem !important;
    }

        .btn-add-to-cart[disabled] {
            opacity: 0.55;
        }

    .btn-add-to-cart {
        background: #18a052;
        border: none;
        color: #fff;
        transition: background 0.16s;
    }

        .btn-add-to-cart:hover:enabled {
            background: #12793d;
        }

    .btn-info {
        background: #18b2eb !important;
        color: #fff !important;
        border: none;
        transition: background 0.16s;
    }

        .btn-info:hover {
            background: #0e74b4 !important;
            color: #fff !important;
        }

    .table-responsive-products {
        width: 100%;
        overflow-x: auto;
        margin-top: 0.2rem;
    }
    /* FAVORI ICON ANİMASYONU */
    .btn-fav-heart .bi-heart,
    .btn-fav-heart .bi-heart-fill {
        transition: color 0.19s, transform 0.13s;
        vertical-align: -0.12em;
    }

    .btn-fav-heart:active .bi-heart,
    .btn-fav-heart:active .bi-heart-fill {
        transform: scale(1.17);
    }

    .btn-fav-heart {
        background: transparent !important;
        border: none;
        box-shadow: none;
        outline: none;
        padding: 0;
        margin: 0;
        font-size: 1.33rem;
        line-height: 1;
        cursor: pointer;
    }

    media (max-width: 800px) {
        .search-bar-card, .table-products

    {
        border-radius: 0.7rem;
    }

    .table-products {
        font-size: 0.96rem;
    }

    .product-img-thumb {
        width: 37px;
        height: 37px;
    }

    }

    media (max-width: 600px) {
        .search-bar-card

    {
        padding: 0.6rem 0.2rem 0.8rem 0.2rem;
    }

    .table-products th, .table-products td {
        padding: 0.5rem 0.6rem !important;
    }

    }
</style>

<h1 class="fw-bold mb-4" style="font-size:2.1rem; color:#1a255e;">Ürünler</h1>

<div class="search-bar-card">
    <form method="get" class="row g-2 align-items-end">
        <div class="col-md-5">
            <input type="text" name="search" class="form-control" placeholder="Ürün adı ile ara..." value="@ViewBag.Search" />
        </div>
        <div class="col-md-4">
            <select name="category" class="form-select">
                <option value="">Kategori seçiniz</option>
                @foreach (var cat in (ViewBag.Categories as List<string> ?? new List<string>()))
                {
                    if (ViewBag.SelectedCategory == cat)
                    {
                        <option value="@cat" selected>@cat</option>
                    }
                    else
                    {
                        <option value="@cat">@cat</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-2">
            <button class="btn btn-primary w-100" type="submit">
                <i class="bi bi-search"></i> Ara
            </button>
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.Search as string) || !string.IsNullOrEmpty(ViewBag.SelectedCategory as string))
        {
            <div class="col-md-1">
                <a href="@Url.Action("Index", "Product")" class="btn btn-secondary w-100">Temizle</a>
            </div>
        }
    </form>
</div>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["FavoriteMessage"] != null)
{
    <div class="alert alert-success">@TempData["FavoriteMessage"]</div>
}

<div class="table-responsive-products">
    <table class="table table-products align-middle mb-0">
        <thead>
            <tr>
                <th>Adı</th>
                <th>Açıklama</th>
                <th>Fiyat</th>
                <th>Stok</th>
                <th>Kategori</th>
                <th>Tarih</th>
                <th>Resim</th>
                <th>Favori</th>
                <th>Sepet</th>
                <th>Detay</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@p.Id" style="font-weight:600; color:#216adb;">
                            @p.Name
                        </a>
                    </td>
                    <td>
                        @(p.Description?.Length > 70
                            ? p.Description.Substring(0, 70) + "..."
                            : p.Description)
                    </td>
                    <td>@($"{p.Price:C}")</td>
                    <td>@p.Stock</td>
                    <td>@p.Category</td>
                    <td>@p.DateAdded.ToString("dd.MM.yyyy")</td>
                    <td>
                        <img src="@(string.IsNullOrEmpty(p.ImageUrl) ? "/images/no-image.png" : p.ImageUrl)"
                             alt="@(p.Name)"
                             class="product-img-thumb" />
                    </td>
                    <td>
                        @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Admin"))
                        {
                            var favIds = ViewBag.FavoriteIds as List<int> ?? new List<int>();
                            bool isFav = favIds.Contains(p.Id);
                            <form asp-action="ToggleFavorite" asp-controller="Product" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@p.Id" />
                                <button type="submit" class="btn-fav-heart" title="Favorile"
                                        style="color:@(isFav ? "red" : "#aaa");">
                                    <i class="bi bi-heart@(isFav ? "-fill" : "")"></i>
                                </button>
                            </form>
                        }
                    </td>
                    <td>
                        @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Admin"))
                        {
                            <button type="button"
                                    class="btn btn-add-to-cart btn-sm"
                                    data-id="@p.Id"
                            @(p.Stock == 0 ? "disabled" : "")
                                    title="@(p.Stock == 0 ? "Stokta yok" : "Sepete Ekle")">
                                Sepete Ekle
                            </button>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@p.Id" class="btn btn-info btn-sm">
                            Detay
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        $(document).on("click", ".btn-add-to-cart", function (e) {
            e.preventDefault();
            var pid = $(this).data("id");
            $.post("/Cart/AddToCartAjax", { productId: pid }, function (res) {
                if (res.success) {
                    if (typeof reloadSideCart === "function") {
                        reloadSideCart();
                    }
                    if (!$("#sideCartPanel").hasClass("active") && typeof openSideCart === "function") {
                        openSideCart();
                    }
                } else {
                    alert(res.error || "Ürün sepete eklenemedi");
                }
            });
        });
    </script>
}
