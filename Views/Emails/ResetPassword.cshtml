@model dynamic

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Şifre Sıfırlama</title>
</head>
<body style="font-family:Arial,sans-serif; background:#f8f8f8; padding:32px;">
    <div style="background:#fff; border-radius:8px; max-width:520px; margin:auto; box-shadow:0 4px 16px #ddd; padding:32px;">
        <div style="text-align:center;">
            <img src="https://notifico.com/logo.png" alt="Notifico Logo" width="80" style="margin-bottom:12px;" />
            <h2 style="color:#3867d6; margin:16px 0 8px;">Şifre Sıfırlama</h2>
        </div>
        <p>Merhaba @Model.UserName,</p>
        <p>Şifrenizi sıfırlamak için aşağıdaki butona tıklayabilirsiniz:</p>
        <div style="text-align:center; margin:30px 0;">
            <a href="@Model.ResetLink" style="display:inline-block; background:#3867d6; color:#fff; font-weight:bold; padding:13px 32px; border-radius:4px; text-decoration:none;">
                Şifreyi Sıfırla
            </a>
        </div>
        <p style="font-size:13px; color:#777;">
            Eğer buton çalışmazsa şu adresi kopyalayıp tarayıcınıza yapıştırın:<br>
            <span style="color:#3867d6;">@Model.ResetLink</span>
        </p>
        <hr>
        <div style="font-size:12px; color:#888; text-align:center;">&copy; 2025 Notifico | Bu mesaj otomatik gönderilmiştir.</div>
    </div>
</body>
</html>
