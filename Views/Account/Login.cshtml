@{
    ViewData["Title"] = "Giriş Yap";
}

<h2>Giriş Yap</h2>


@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="Login" method="post">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label for="Email" class="form-label">E-posta</label>
        <input type="email" class="form-control" id="Email" name="Email" required placeholder="E-posta adresiniz" />
    </div>
    <div class="mb-3">
        <label for="Password" class="form-label">Şifre</label>
        <input type="password" class="form-control" id="Password" name="Password" required placeholder="Şifreniz" />
    </div>
    <div class="text-end mb-3">
        <a asp-action="ForgotPassword" asp-controller="Account">Şifremi Unuttum?</a>
    </div>
    <button type="submit" class="btn btn-primary">Giriş Yap</button>
</form>
