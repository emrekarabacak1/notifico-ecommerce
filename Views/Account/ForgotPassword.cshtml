@model Notifico.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Şifremi Unuttum";
    ViewData["FullPage"] = true; 
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        background: #f6faff;
        min-height: 100vh;
    }
    .auth-section-bg {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100vw;
    }
    .auth-inner-content {
        width: 100%;
        max-width: 420px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        align-items: stretch;
        background: none;
        padding: 0 1rem;
    }
    .auth-title {
        font-size: 2.1rem;
        font-weight: 800;
        color: #1a255e;
        margin-bottom: 0.6rem;
        letter-spacing: -0.01em;
        text-align: left;
    }
    .auth-desc {
        color: #526180;
        font-size: 1.08rem;
        margin-bottom: 1.3rem;
        text-align: left;
    }
    .auth-form {
        width: 100%;
    }
    .auth-form label {
        font-weight: 600;
        color: #3a4d72;
        font-size: 1rem;
        margin-bottom: 0.21rem;
    }
    .auth-form .form-group {
        margin-bottom: 1.13rem;
    }
    .auth-form .form-control {
        border-radius: 0.9rem;
        border: 1.25px solid #d8e2f5;
        font-size: 1.03rem;
        padding: 0.82rem 1.15rem;
        background: #fcfcff;
        transition: border .13s;
    }
    .auth-form .form-control:focus {
        border-color: #4379ec;
        box-shadow: 0 0 0 2px #e5f0ff;
        background: #f7fbff;
    }
    .auth-form .text-danger { font-size: 0.95rem; }
    .auth-form .alert-danger {
        padding: 0.5rem 1rem;
        font-size: 0.99rem;
        margin-bottom: 0.95rem;
        border-radius: 0.6rem;
    }
    .auth-btn-row {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 1.12rem;
        margin-top: 0.6rem;
    }
    .auth-btn-main {
        background: #2563eb;
        color: #fff;
        border-radius: 2rem;
        padding: 0.83rem 2.12rem;
        font-size: 1.08rem;
        font-weight: 700;
        border: none;
        transition: background .16s;
        box-shadow: 0 2px 10px 0 rgba(47,101,208,0.09);
    }
    .auth-btn-main:hover {
        background: #153265;
    }
    .auth-bottom-link {
        color: #2563eb;
        font-weight: 600;
        font-size: 1rem;
        text-decoration: none;
        margin-left: 1.1rem;
        padding: 0.31rem 0.5rem;
        border-radius: 0.7rem;
        transition: background 0.16s, color 0.16s;
    }
    .auth-bottom-link:hover {
        background: #eaf2ff;
        color: #153265;
        text-decoration: underline;
    }
    media (max-width: 600px) {
        .auth-title { font-size: 1.16rem; }
        .auth-inner-content { max-width: 97vw; }
        .auth-btn-row { flex-direction: column; gap: 0.6rem; align-items: stretch;}
        .auth-section-bg { align-items: flex-start; padding-top: 3.2rem; }
    }
</style>

<div class="auth-section-bg">
    <div class="auth-inner-content">
        <div class="auth-title">Şifremi Unuttum</div>
        <div class="auth-desc">
            Hesabınıza giriş için e-posta adresinizi yazın. Şifre sıfırlama bağlantısı gönderilecektir.
        </div>
        <form asp-action="ForgotPassword" method="post" autocomplete="off" class="auth-form">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="form-group">
                <label asp-for="Email">E-posta</label>
                <input asp-for="Email" class="form-control" placeholder="E-posta adresiniz" autocomplete="username" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="auth-btn-row">
                <button type="submit" class="auth-btn-main">Sıfırlama Linki Gönder</button>
                <a asp-action="Login" asp-controller="Account" class="auth-bottom-link">Giriş Yap</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
