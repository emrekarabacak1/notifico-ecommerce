@model Notifico.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Şifremi Unuttum";
}

<h2 class="mb-4">Şifremi Unuttum</h2>

<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

<form asp-action="ForgotPassword" method="post" class="mt-4" autocomplete="off">
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" placeholder="E-posta adresiniz" autocomplete="username" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Sıfırlama Linki Gönder</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
