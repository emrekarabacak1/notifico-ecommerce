@{
    ViewData["Title"] = "Kayıt Başarılı";
    ViewData["FullPage"] = true;
}

<style>
    html, body {
        min-height: 100vh;
        background: #f7fafd;
    }
    .register-confirm-center {
        min-height: 80vh;
        width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .register-confirm-box {
        max-width: 480px;
        width: 100%;
        background: #fff;
        border-radius: 1.2rem;
        box-shadow: 0 4px 30px 0 rgba(70,110,200,0.09);
        padding: 2.6rem 2.2rem 2.2rem 2.2rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 1.5px solid #e6eefd;
    }
    .register-confirm-logo {
        margin-bottom: 1.2rem;
    }
    .register-confirm-title {
        font-size: 1.7rem;
        font-weight: 800;
        color: #16784b;
        margin-bottom: 1.1rem;
        text-align: center;
    }
    .register-confirm-desc {
        color: #243c58;
        font-size: 1.06rem;
        text-align: center;
        margin-bottom: 1.3rem;
        line-height: 1.6;
    }
    .register-confirm-btn {
        background: #2563eb;
        color: #fff;
        border-radius: 2rem;
        padding: 0.78rem 2.2rem;
        font-size: 1.07rem;
        font-weight: 700;
        border: none;
        margin-top: 0.8rem;
        box-shadow: 0 2px 10px 0 rgba(47,101,208,0.09);
        transition: background .18s;
        text-decoration: none;
        display: inline-block;
    }
    .register-confirm-btn:hover {
        background: #153265;
        color: #fff;
    }
    media (max-width: 600px) {
        .register-confirm-box { max-width: 97vw; padding: 1.1rem 0.7rem; }
        .register-confirm-title { font-size: 1.18rem; }
    }
</style>

<div class="register-confirm-center">
    <div class="register-confirm-box">
        <div class="register-confirm-logo">
            <svg xmlns="http://www.w3.org/2000/svg" width="54" height="54" fill="none" viewBox="0 0 54 54">
                <rect width="54" height="54" rx="15" fill="#34c177"/>
                <path d="M38 22.5L25.75 34l-7.75-7.5" stroke="#fff" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
        </div>
        <div class="register-confirm-title">Kayıt işleminiz başarılı!</div>
        <div class="register-confirm-desc">
            Lütfen e-posta adresinize gelen onay linkine tıklayarak hesabınızı aktif edin.<br>
            Onay mailini bulamazsanız spam/junk klasörünüzü de kontrol edin.
        </div>
        <a href="@Url.Action("Login", "Account")" class="register-confirm-btn">Giriş Yap</a>
    </div>
</div>
