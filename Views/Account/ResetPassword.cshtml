@model Notifico.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Şifreyi Sıfırla";
    ViewData["FullPage"] = true;
}

<style>
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        background: #f7fafd;
        min-height: 100vh;
    }
    .pw-reset-center-wrapper {
        min-height: 80vh;
        width: 100vw;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .pw-reset-box {
        width: 100%;
        max-width: 380px;
        background: #fff;
        border-radius: 1.2rem;
        box-shadow: 0 4px 30px 0 rgba(70,110,200,0.09);
        padding: 2.5rem 2.1rem 2.1rem 2.1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
        border: 1.5px solid #e6eefd;
    }
    .pw-reset-logo {
        display: block;
        margin: 0 auto 18px auto;
        width: 50px;
        height: 50px;
    }
    .pw-reset-title {
        font-size: 2rem;
        font-weight: 800;
        color: #183261;
        margin-bottom: 1.1rem;
        text-align: center;
        letter-spacing: -0.02em;
    }
    .pw-reset-form {
        width: 100%;
        margin-top: 0.2rem;
    }
    .pw-reset-form label {
        font-weight: 600;
        color: #37446d;
        font-size: 1rem;
        margin-bottom: 0.15rem;
    }
    .pw-reset-form .form-group {
        margin-bottom: 1.07rem;
    }
    .pw-reset-form .form-control {
        border-radius: 0.9rem;
        border: 1.3px solid #d4e0f5;
        font-size: 1rem;
        padding: 0.74rem 1.13rem;
        background: #fcfcff;
        transition: border .15s;
    }
    .pw-reset-form .form-control:focus {
        border-color: #7aa7e7;
        box-shadow: 0 0 0 2px #e5f0ff;
        background: #f4f9ff;
    }
    .pw-reset-form .text-danger { font-size: 0.95rem; }
    .pw-reset-btn {
        background: #2563eb;
        color: #fff;
        border-radius: 2rem;
        padding: 0.76rem 2.2rem;
        font-size: 1.09rem;
        font-weight: 700;
        border: none;
        width: 100%;
        transition: background .18s;
        box-shadow: 0 2px 10px 0 rgba(47,101,208,0.09);
    }
    .pw-reset-btn:hover {
        background: #153265;
    }
    media (max-width: 600px) {
        .pw-reset-box { max-width: 97vw; padding: 1.1rem 0.5rem; }
        .pw-reset-title { font-size: 1.19rem; }
    }
</style>

<div class="pw-reset-center-wrapper">
    <div class="pw-reset-box">
        <div class="pw-reset-logo">
            <svg xmlns="http://www.w3.org/2000/svg" width="46" height="46" fill="none" viewBox="0 0 48 48">
                <rect width="48" height="48" rx="14" fill="#2563eb"/>
                <path d="M24 31c2.21 0 4-1.79 4-4v-3c0-2.21-1.79-4-4-4s-4 1.79-4 4v3c0 2.21 1.79 4 4 4z" fill="#fff"/>
                <rect x="17" y="18" width="14" height="3" rx="1.5" fill="#fff"/>
                <rect x="22" y="13" width="4" height="5" rx="2" fill="#fff"/>
            </svg>
        </div>
        <div class="pw-reset-title">Şifreyi Sıfırla</div>

        <form asp-action="ResetPassword" method="post" autocomplete="off" class="pw-reset-form">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Token" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password">Yeni Şifre</label>
                <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" placeholder="Yeni şifreniz" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">Yeni Şifre (tekrar)</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="new-password" placeholder="Yeni şifre (tekrar)" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="pw-reset-btn">Şifreyi Sıfırla</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
