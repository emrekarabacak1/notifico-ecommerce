@using Microsoft.AspNetCore.Identity
@inject SignInManager<Notifico.Models.AppUser> SignInManager
@inject UserManager<Notifico.Models.AppUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Notifico Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.11.2/font/bootstrap-icons.min.css" />
    <style>
        body {
            background: #f6f8fc;
        }

        .admin-sidebar {
            min-height: 100vh;
            background: #22366a;
            color: #fff;
            width: 235px;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1020;
            display: flex;
            flex-direction: column;
            padding: 2.3rem 1.3rem 1.7rem 1.3rem;
            box-shadow: 2px 0 22px 0 rgba(60,70,120,0.07);
        }

        .admin-logo {
            font-size: 1.6rem;
            font-weight: 800;
            color: #fff;
            margin-bottom: 2.7rem;
            display: flex;
            align-items: center;
            gap: 0.7rem;
            text-decoration: none;
        }

            .admin-logo i {
                font-size: 1.8rem;
                color: #39a5ff;
            }

        .admin-menu {
            list-style: none;
            padding: 0;
            margin: 0;
            flex: 1;
        }

            .admin-menu li {
                margin-bottom: 0.73rem;
            }

            .admin-menu a {
                display: flex;
                align-items: center;
                gap: 0.77rem;
                color: #c8dcff;
                text-decoration: none;
                padding: 0.62rem 1.1rem;
                font-size: 1.09rem;
                border-radius: 0.7rem;
                transition: background .13s, color .14s;
            }

                .admin-menu a.active, .admin-menu a:hover {
                    background: #39a5ff;
                    color: #fff;
                }

        .admin-sidebar-bottom {
            margin-top: 2rem;
        }

        .admin-topbar {
            margin-left: 235px;
            height: 70px;
            background: #fff;
            border-bottom: 1px solid #e8efff;
            display: flex;
            align-items: center;
            padding: 0 2.2rem;
            box-shadow: 0 4px 16px 0 rgba(60,70,120,0.04);
            justify-content: flex-end;
        }

        .admin-user-info {
            font-weight: 700;
            color: #22366a;
            font-size: 1.07rem;
            display: flex;
            align-items: center;
            gap: 0.65rem;
        }

        .admin-main-content {
            margin-left: 235px;
            min-height: 83vh;
            width: calc(100% - 235px);
            box-sizing: border-box;
        }

        media(max-width:900px) {
            .admin-sidebar, .admin-main-content, .admin-topbar

        {
            margin-left: 0;
            width: 100%;
            position: static;
        }

        .admin-main-content {
            width: 100%;
            padding: 1rem 0.3rem;
        }

        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    @if (SignInManager.IsSignedIn(User))
    {
        <div class="admin-sidebar">
            <a href="/Admin/Index" class="admin-logo"><i class="bi bi-kanban"></i> Notifico Admin</a>
            <ul class="admin-menu">
                <li><a href="/Admin/Index" class="@(ViewContext.RouteData.Values["action"].ToString() == "Index" ? "active" : "")"><i class="bi bi-house-door"></i> Anasayfa</a></li>
                <li><a href="/Admin/Dashboard" class="@(ViewContext.RouteData.Values["action"].ToString() == "Dashboard" ? "active" : "")"><i class="bi bi-speedometer2"></i> Dashboard</a></li>
                <li><a href="/Admin/OrderList" class="@(ViewContext.RouteData.Values["action"].ToString() == "OrderList" ? "active" : "")"><i class="bi bi-list-check"></i> Siparişler</a></li>
                <li><a href="/Admin/ProductList" class="@(ViewContext.RouteData.Values["action"].ToString() == "ProductList" ? "active" : "")"><i class="bi bi-box-seam"></i> Ürünler</a></li>
            </ul>
            <div class="admin-sidebar-bottom mt-auto">
                <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger w-100"><i class="bi bi-box-arrow-right"></i> Çıkış Yap</button>
                </form>
            </div>
        </div>

        <div class="admin-topbar">
            <div class="admin-user-info">
                <i class="bi bi-person-circle text-primary" style="font-size:1.6rem"></i>
                Hoş Geldin, <span class="text-dark">@UserManager.GetUserName(User)</span>
            </div>
        </div>
    }

    <div class="admin-main-content">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var logoutForm = document.getElementById("logoutForm");
            if (logoutForm) {
                logoutForm.addEventListener("submit", function () {
                    var sidebar = document.querySelector(".admin-sidebar");
                    var topbar = document.querySelector(".admin-topbar");
                    if (sidebar) sidebar.style.display = "none";
                    if (topbar) topbar.style.display = "none";
                });
            }
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
