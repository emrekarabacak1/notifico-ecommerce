@using Microsoft.AspNetCore.Identity
@inject SignInManager<Notifico.Models.AppUser> SignInManager
@inject UserManager<Notifico.Models.AppUser> UserManager

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Notifico</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Notifico.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <style>
        #sideCartOverlay {
            display: none;
            position: fixed;
            z-index: 1200;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            background: rgba(0,0,0,0.16);
            transition: backdrop-filter 0.25s;
        }

            #sideCartOverlay.active {
                display: block;
            }

        #sideCartPanel {
            position: fixed;
            top: 0;
            right: -370px;
            width: 360px;
            max-width: 98vw;
            height: 100vh;
            background: #fff;
            z-index: 1250;
            box-shadow: -8px 0 20px rgba(0,0,0,0.14), -1px 0 0 #ececec;
            transition: right 0.33s cubic-bezier(.65,.04,.98,.34);
            overflow-y: auto;
        }

            #sideCartPanel.active {
                right: 0;
            }

        media (max-width: 600px) {
            #sideCartPanel

        {
            width: 99vw;
        }

        }

        .fullpage-footer {
            max-width: 100vw !important;
            width: 100vw !important;
        }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Notifico</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-warning" asp-controller="Admin" asp-action="Dashboard">
                                        <i class="bi bi-bar-chart"></i> Dashboard
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-warning" asp-controller="Admin" asp-action="OrderList">
                                        <i class="bi bi-list-check"></i> Siparişler
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-warning" asp-controller="Admin" asp-action="ProductList">
                                        <i class="bi bi-box-seam"></i> Ürünler
                                    </a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Product" asp-action="Index">Ürünler</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-success" href="javascript:void(0);" id="openSideCartBtn">
                                        <i class="bi bi-cart-fill"></i> Sepetim
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-primary" asp-controller="Cart" asp-action="MyOrders">Siparişlerim</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-info" asp-controller="Profile" asp-action="Index">Profil</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-success" asp-controller="Address" asp-action="Index">Adreslerim</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-danger" asp-controller="Product" asp-action="MyFavorites">
                                        <i class="bi bi-heart-fill"></i> Favorilerim
                                    </a>
                                </li>
                            }
                            <li class="nav-item ms-auto d-flex align-items-center">
                                <span class="nav-link text-success">Hoş Geldin, @UserManager.GetUserName(User)!</span>
                            </li>
                            <li class="nav-item d-flex align-items-center">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger ms-2">Çıkış Yap</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="btn btn-primary me-2" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-primary" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="sideCartOverlay"></div>
    <div id="sideCartPanel">
        <div class="d-flex justify-content-between align-items-center p-3 border-bottom">
            <h5 class="mb-0"><i class="bi bi-cart-fill text-success"></i> Sepetiniz</h5>
            <button class="btn btn-close" id="closeSideCartBtn" title="Kapat"></button>
        </div>
        <div id="sideCartContent" class="p-3">
            <div class="text-center text-muted py-5">Sepet yükleniyor...</div>
        </div>
    </div>

    @{
        var isFullPage = ViewData["FullPage"] as bool? ?? false;
    }
    @if (isFullPage)
    {
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    }
    else
    {
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    @if (User.IsInRole("Admin"))
    {
        <div class="position-fixed top-0 end-0 p-3" style="z-index:1100">
            <div id="orderToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body">
                        <span id="orderToastText">Yeni sipariş bildirimi!</span>
                    </div>
                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>
    }

    <footer class="border-top footer text-muted">
        <div class="@(isFullPage ? "fullpage-footer" : "container")">
            &copy; 2025 - Notifico - <a asp-controller="Product" asp-action="Index">Ürünler</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    @if (User.IsInRole("Admin"))
    {
        <script>
            (function () {
                const connection = new signalR.HubConnectionBuilder()
                    .withUrl("/notificationHub")
                    .build();

                connection.on("ReceiveOrderNotification", function (message) {
                    const toastEl = document.getElementById("orderToast");
                    document.getElementById("orderToastText").innerText = message;
                    new bootstrap.Toast(toastEl).show();
                });

                connection.start().catch(err => console.error(err.toString()));
            })();
        </script>
    }

    <script>
        function openSideCart() {
            $("#sideCartOverlay").addClass("active");
            $("#sideCartPanel").addClass("active");
            $("#sideCartContent").html('<div class="text-center text-muted py-5">Sepet yükleniyor...</div>');
            $.get("/Cart/SideCartPartial", function (html) {
                $("#sideCartContent").html(html);
            });
        }
        function closeSideCart() {
            $("#sideCartOverlay").removeClass("active");
            $("#sideCartPanel").removeClass("active");
        }
        $(function () {
            $("#openSideCartBtn").click(function () { openSideCart(); });
            $("#closeSideCartBtn, #sideCartOverlay").click(function () { closeSideCart(); });

            $("#sideCartContent").on("click", ".btn-increase", function () {
                var id = $(this).data("id");
                $.post("/Cart/IncreaseQuantityAjax", { id: id }, function (result) {
                    if (result.success) reloadSideCart();
                    else alert(result.error);
                });
            });
            $("#sideCartContent").on("click", ".btn-decrease", function () {
                var id = $(this).data("id");
                $.post("/Cart/DecreaseQuantityAjax", { id: id }, function (result) {
                    if (result.success) reloadSideCart();
                    else alert(result.error);
                });
            });
            $("#sideCartContent").on("click", ".btn-remove", function () {
                if (!confirm("Bu ürünü sepetten çıkarmak istediğinize emin misiniz?")) return;
                var id = $(this).data("id");
                $.post("/Cart/RemoveFromCartAjax", { id: id }, function (result) {
                    if (result.success) reloadSideCart();
                    else alert(result.error);
                });
            });
            $("#sideCartContent").on("click", "#sideCartClearBtn", function () {
                if (!confirm("Sepeti tamamen boşaltmak istediğinizden emin misiniz?")) return;
                $.post("/Cart/ClearCartAjax", {}, function (result) {
                    if (result.success) reloadSideCart();
                    else alert("Hata: " + result.error);
                });
            });

            window.reloadSideCart = function () {
                $("#sideCartContent").load("/Cart/SideCartPartial");
            }
        });
    </script>

    <script>
        $(function () {
            @if (TempData["Success"] != null)
            {
                <text>toastr.success("@TempData["Success"].ToString().Replace("\"", "\\\"")", "Başarılı", { timeOut: 2200 });</text>
            }
            @if (TempData["Error"] != null)
            {
                <text>toastr.error("@TempData["Error"].ToString().Replace("\"", "\\\"")", "Hata", { timeOut: 3500 });</text>
            }
            @if (TempData["Info"] != null)
            {
                <text>toastr.info("@TempData["Info"].ToString().Replace("\"", "\\\"")", "Bilgi", { timeOut: 3000 });</text>
            }
            @if (TempData["Warning"] != null)
            {
                <text>toastr.warning("@TempData["Warning"].ToString().Replace("\"", "\\\"")", "Uyarı", { timeOut: 3000 });</text>
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
