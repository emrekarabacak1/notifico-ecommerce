@using Notifico.Models
@using System.Globalization
@model IEnumerable<Order>

@{
    ViewData["Title"] = "Tüm Siparişler";
    var tr = new CultureInfo("tr-TR");
    string currentSearch = Context.Request.Query["search"];
    string currentStatus = Context.Request.Query["status"];
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Tüm Siparişler</h2>
    </div>

    <form method="get" class="row g-3 mb-4">
        <div class="col-md-4">
            <input type="text" class="form-control" name="search" placeholder="Kullanıcı adı ile ara"
                   value="@currentSearch" />
        </div>
        <div class="col-md-3">
            <select name="status" class="form-select">
                <option value="">Tüm Statüler</option>
                @foreach (OrderStatus s in Enum.GetValues(typeof(OrderStatus)))
                {
                    if (currentStatus == ((int)s).ToString())
                    {
                        <option value="@((int)s)" selected>@s</option>
                    }
                    else
                    {
                        <option value="@((int)s)">@s</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-2 d-flex align-items-center">
            <button type="submit" class="btn btn-primary me-2">Filtrele</button>
            <a href="@Url.Action("OrderList", "Admin")" class="btn btn-outline-secondary">Temizle</a>
        </div>
    </form>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Henüz sipariş bulunmuyor.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Sipariş No</th>
                        <th>Kullanıcı</th>
                        <th>Tarih</th>
                        <th>Tutar</th>
                        <th>Statü</th>
                        <th class="text-end">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        var cancelDisabled = (order.Status == OrderStatus.IptalEdildi || order.Status == OrderStatus.TeslimEdildi);
                        <tr>
                            <td>@order.Id</td>
                            <td>@(order?.User?.UserName ?? order?.UserId.ToString())</td>
                            <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@order.TotalAmount.ToString("C", tr)</td>
                            <td>@order.Status.ToString()</td>
                            <td class="text-end">
                                <div class="d-inline-flex gap-1">

                                    <a class="btn btn-sm btn-primary"
                                       asp-controller="Admin"
                                       asp-action="OrderDetail"
                                       asp-route-id="@order.Id">
                                        Detay
                                    </a>

                                    @if (!cancelDisabled)
                                    {
                                        <form asp-controller="Admin"
                                              asp-action="CancelOrder"
                                              method="post"
                                              class="d-inline"
                                              onsubmit="return confirm('Bu siparişi iptal etmek istediğinize emin misiniz?');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@order.Id" />
                                            <button type="submit" class="btn btn-sm btn-warning">
                                                İptal Et
                                            </button>
                                        </form>
                                    }

                                    <form asp-controller="Admin"
                                          asp-action="DeleteOrder"
                                          method="post"
                                          class="d-inline"
                                          onsubmit="return confirm('Bu siparişi kalıcı olarak silmek istediğinize emin misiniz?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@order.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                            @(order.Status == OrderStatus.IptalEdildi ? "disabled" : null)>
                                            Sil
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(function () {
            @if (TempData["StatusMessage"] != null)
            {
                var msg = TempData["StatusMessage"].ToString().Replace("'", "\\'");
                <text>toastr.success('@msg', 'Başarılı', { timeOut: 2500 });</text>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                var msg = TempData["ErrorMessage"].ToString().Replace("'", "\\'");
                <text>toastr.error('@msg', 'Hata', { timeOut: 3000 });</text>
            }
        });
    </script>
}
