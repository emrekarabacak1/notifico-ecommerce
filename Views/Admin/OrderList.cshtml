@using Notifico.Models
@using System.Globalization
@model IEnumerable<Order>

@{
    ViewData["Title"] = "Tüm Siparişler";
    var tr = new CultureInfo("tr-TR");
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Tüm Siparişler</h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            Henüz sipariş bulunmuyor.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Sipariş No</th>
                        <th scope="col">Kullanıcı</th>
                        <th scope="col">Tarih</th>
                        <th scope="col">Tutar</th>
                        <th scope="col">Statü</th>
                        <th scope="col" class="text-end">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.Id</td>

                            <td>
                                @{
                                    var userName = order?.User?.UserName ?? order?.User?.UserName;
                                    if (!string.IsNullOrWhiteSpace(userName))
                                    {
                                        @userName
                                    }
                                    else
                                    {
                                        @order?.UserId
                                    }
                                }
                            </td>

                            <td>@order.OrderDate.ToString("dd.MM.yyyy HH:mm")</td>

                            <td>@order.TotalAmount.ToString("C", tr)</td>

                            <td>
                                @{
                                    var statusText = order.Status.ToString();
                                }
                                @statusText
                            </td>

                            <td class="text-end">
                                <a class="btn btn-sm btn-primary"
                                   asp-controller="Admin"
                                   asp-action="OrderDetail"
                                   asp-route-id="@order.Id">
                                    Detay
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
