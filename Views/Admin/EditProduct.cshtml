@model Notifico.Models.Product

<h2>Ürünü Düzenle</h2>

<form asp-action="EditProduct" asp-controller="Admin" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" />
    </div>
    <div class="mb-3">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="form-control" type="number" min="0" />
    </div>
    <div class="mb-3">
        <label asp-for="Category"></label>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" type="url" />
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>