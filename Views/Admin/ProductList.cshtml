@model IEnumerable<Notifico.Models.Product>

<h2>Ürünler</h2>

<a class="btn btn-primary mb-3" asp-controller="Admin" asp-action="AddProduct">Yeni Ürün Ekle</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Kategori</th>
            <th>Tarih</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>@($"{p.Price:C}")</td>
                <td>@p.Stock</td>
                <td>@p.Category</td>
                <td>@p.DateAdded.ToString("dd.MM.yyyy")</td>
                <td>
                    @if (!string.IsNullOrEmpty(p.ImageUrl))
                    {
                        <img src="@p.ImageUrl" alt="Ürün Resmi" style="width:40px; height:40px;" />
                    }
                </td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="EditProduct" asp-route-id="@p.Id">Edit</a>
                    <a class="btn btn-danger btn-sm" asp-action="DeleteProduct" asp-route-id="@p.Id"
                       onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
