@model Notifico.Models.Product

@{
    ViewData["Title"] = Model?.Id > 0 ? "Ürünü Düzenle" : "Yeni Ürün";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="@(Model?.Id > 0 ? "EditProduct" : "AddProduct")" asp-controller="Admin" method="post" novalidate>
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Ürün adı giriniz" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Ürün açıklamasını giriniz"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Stock" class="form-label"></label>
        <input asp-for="Stock" class="form-control" type="number" min="0" placeholder="0" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Category" class="form-label"></label>
        <input asp-for="Category" class="form-control" placeholder="Kategori giriniz" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ImageUrl" class="form-label"></label>
        <input asp-for="ImageUrl" class="form-control" type="url" placeholder="https://..." />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">
        @(Model?.Id > 0 ? "Güncelle" : "Kaydet")
    </button>
    <a asp-action="ProductList" asp-controller="Admin" class="btn btn-secondary ms-2">İptal</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(function () {
            var errors = [];
            $(".text-danger").each(function () {
                if ($(this).text().trim() !== "") {
                    errors.push($(this).text().trim());
                }
            });
            if (errors.length > 0) {
                toastr.error(errors.join("<br>"), "Form Hataları", { timeOut: 3200, closeButton: true, progressBar: true });
            }

        @if (TempData["StatusMessage"] != null)
        {
            var msg = TempData["StatusMessage"].ToString().Replace("'", "\\'");
            <text>toastr.success('@msg', 'Başarılı', { timeOut: 2000 }); </text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            var msg = TempData["ErrorMessage"].ToString().Replace("'", "\\'");
            <text>toastr.error('@msg', 'Hata', { timeOut: 2800 }); </text>
        }
                });
    </script>
}
