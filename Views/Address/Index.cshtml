@model IEnumerable<Notifico.Models.Address>
@{
    ViewData["Title"] = "Adreslerim";
}
<h2>Adreslerim</h2>
<a asp-action="Add" class="btn btn-primary mb-3">Yeni Adres Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Adres</th>
            <th>Şehir</th>
            <th>İlçe</th>
            <th>Varsayılan</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Title</td>
                <td>@a.FullAddress</td>
                <td>@a.City</td>
                <td>@a.District</td>
                <td>
                    @if (a.IsDefault)
                    {
                        <span class="badge bg-success">Varsayılan</span>
                    }
                    else
                    {
                        <form asp-action="SetDefault" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@a.Id" />
                            <button class="btn btn-link">Varsayılan Yap</button>
                        </form>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@a.Id" class="btn btn-sm btn-warning">Düzenle</a>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@a.Id" />
                        <button class="btn btn-sm btn-danger" onclick="return confirm('Silinsin mi?');">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
