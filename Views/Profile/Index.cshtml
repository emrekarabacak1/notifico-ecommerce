@model Notifico.Models.ProfileViewModel

@{
    ViewData["Title"] = "Profilim";
}

<div class="card mx-auto mt-5" style="max-width:600px;">
    <div class="card-body">
        <h2 class="mb-4">Profilim</h2>
        <table class="table">
            <tr>
                <th>Kullanıcı Adı</th>
                <td>@Model.UserName</td>
            </tr>
            <tr>
                <th>E-posta</th>
                <td>@Model.Email</td>
            </tr>
            <tr>
                <th>Ad</th>
                <td>@Model.FirstName</td>
            </tr>
            <tr>
                <th>Soyad</th>
                <td>@Model.LastName</td>
            </tr>
            <tr>
                <th>Telefon</th>
                <td>@Model.PhoneNumber</td>
            </tr>
            <tr>
                <th>Doğum Tarihi</th>
                <td>@(Model.BirthDate.HasValue ? Model.BirthDate.Value.ToString("dd.MM.yyyy") : "-")</td>
            </tr>
            <tr>
                <th>Adres</th>
                <td>@Model.Address</td>
            </tr>
            <tr>
                <th>Şehir</th>
                <td>@Model.City</td>
            </tr>
            <tr>
                <th>İlçe</th>
                <td>@Model.District</td>
            </tr>
        </table>
        <div class="mt-4">
            <a asp-action="Edit" class="btn btn-primary">Düzenle</a>
            <a asp-action="ChangePassword" class="btn btn-secondary">Şifre Değiştir</a>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        $(function () {
        @if (TempData["ProfileSuccess"] != null)
        {
            <text>toastr.success("@TempData["ProfileSuccess"]", "Başarılı", { timeOut: 2200 }); </text>
        }
        @if (TempData["Error"] != null)
        {
            <text>toastr.error("@TempData["Error"]", "Hata", { timeOut: 3000 }); </text>
        }
                });
    </script>
}
