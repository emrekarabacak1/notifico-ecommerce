@model Notifico.Models.ProfileViewModel

@{
    ViewData["Title"] = "Profilim";
}

<div class="row mt-4">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow-sm p-4">
            <h2 class="mb-4">Profilim</h2>
            <dl class="row">
                <dt class="col-sm-4">Kullanıcı Adı</dt>
                <dd class="col-sm-8">@Model.UserName</dd>
                <dt class="col-sm-4">E-posta</dt>
                <dd class="col-sm-8">@Model.Email</dd>
                <dt class="col-sm-4">Ad</dt>
                <dd class="col-sm-8">@Model.FirstName</dd>
                <dt class="col-sm-4">Soyad</dt>
                <dd class="col-sm-8">@Model.LastName</dd>
                <dt class="col-sm-4">Telefon</dt>
                <dd class="col-sm-8">@Model.PhoneNumber</dd>
                <dt class="col-sm-4">Doğum Tarihi</dt>
                <dd class="col-sm-8">@Model.BirthDate?.ToString("dd.MM.yyyy")</dd>
                <dt class="col-sm-4">Adres</dt>
                <dd class="col-sm-8">@Model.Address</dd>
            </dl>

            <div class="mt-4 d-flex gap-2">
                <a asp-action="Edit" class="btn btn-primary">Düzenle</a>
                <a asp-action="ChangePassword" class="btn btn-outline-secondary">Şifre Değiştir</a>
            </div>

            @if (TempData["ProfileSuccess"] != null)
            {
                <div class="alert alert-success mt-3">@TempData["ProfileSuccess"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger mt-3">@TempData["Error"]</div>
            }
        </div>
    </div>
</div>
